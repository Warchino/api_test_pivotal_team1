{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "code",
    "kind",
    "error",
    "requirement"
  ],
  "properties": {
    "code": {
      "$id": "#/properties/code",
      "type": "string",
      "title": "The Code Schema",
      "default": "",
      "examples": [
        "invalid_parameter"
      ],
      "pattern": "^(.*)$"
    },
    "kind": {
      "$id": "#/properties/kind",
      "type": "string",
      "title": "The Kind Schema",
      "default": "",
      "examples": [
        "error"
      ],
      "pattern": "^(.*)$"
    },
    "error": {
      "$id": "#/properties/error",
      "type": "string",
      "title": "The Error Schema",
      "default": "",
      "examples": [
        "One or more request parameters was missing or invalid."
      ],
      "pattern": "^(.*)$"
    },
    "requirement": {
      "$id": "#/properties/requirement",
      "type": "string",
      "title": "The Requirement Schema",
      "default": "",
      "examples": [
        "Task position can not be greater than the number of tasks in the story plus 1"
      ],
      "pattern": "^(.*)$"
    }
  }
}